{
  "name": "podpoint",
  "title": "Pod Point watcher",
  "description": "Polls Pod Point pod status endpoint and reports connector A/B availability.",
  "version": "1.0.0",
  "entrypoint": "index.js",
  "inputs": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": ["podpoint_status", "podpoint_watch"],
        "default": "podpoint_status"
      },
      "podId": { "type": "string", "default": "10059" },
      "intervalSeconds": { "type": "number", "default": 30 },
      "timeoutSeconds": { "type": "number", "default": 900 }
    },
    "required": ["action", "podId"]
  }
}

